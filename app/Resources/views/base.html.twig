{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
    <html>
        <head>        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Test{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/styles.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('assets/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}          
        </head>
        <body>
        <div id="navbar-main">
            <!-- Fixed navbar -->
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li> <a href="" class="smoothScroll"><img src="{{ asset('assets/img/logoSca.JPG') }}" class="img img-responsive" height="40" width="40"/></a></li>                   
                        </ul>               
                        <ul class="nav navbar-nav navbar-right pull-right">
                            <li> <a href="{{ path('register_user') }}" class="smoothScroll">Sign in</a></li> 
                             {% if is_granted('ROLE_USER') %}
                                <li> <a href="{{ path('logout') }}" class="smoothScroll">Logout</a></li>
                             {% else %}
                                <li> <a href="{{ path('homepage') }}" class="smoothScroll">Sign up</a></li>
                             {% endif %}
                            
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div> 
 
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}        
    </body>
</html>