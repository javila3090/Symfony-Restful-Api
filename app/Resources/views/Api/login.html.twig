{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
            {% if error %}
                <div>{{ error.message }}</div>
            {% endif %}
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-success">
                <div class="panel-heading">Iniciar Sesi√≥n</div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form" method="POST" action="{{ path('login_check') }}">   
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                         <input type="hidden" name="_target_path" value="/home" />
                        <div class="form-group">
                            <label for="email" class="col-md-4 control-label">Usuario</label>
                            
                            <div class="col-md-6">
                                <input id="username" type="text" class="form-control" name="_username" value="" required autofocus>                               
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">Password</label>
                            
                            <div class="col-md-6">
                                <input id="_password" type="password" class="form-control" name="_password" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4">
                                <button type="submit" class="btn btn-success">
                                    Login
                                </button>
                            </div>
                        </div>                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}